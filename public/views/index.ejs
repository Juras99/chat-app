  <!-- Header -->
  <header>
    <nav class="container flex items-center py-4 mt-4 sm:mt-12">
      <div class="py-1 text-2xl uppercase"><i class="px-3 text-xl fa-solid fa-message text-chat-purple"></i>Chat App</div>
      <div class="flex justify-end flex-1 sm:hidden">
        <i class="text-2xl fas fa-bars"></i>
      </div>
    </nav>
  </header>

  <section class="relative">
    <div class="container flex flex-col items-center content-center gap-5 mt-14 lg:mt-28">
      <h2 class="text-2xl text-center">Zaloguj się</h2>
      <form action="/chat" method="get" class="flex flex-col px-8 pt-6 pb-8 mb-4 bg-white rounded shadow-md">
        <div class="mb-4">
          <label class="block mb-2 text-sm font-bold text-gray-700">
            Nazwa wyświetlana
          </label>
          <input class="w-full px-3 py-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" name="username" type="text" maxlength="20" placeholder="Nazwa wyświetlana" value="" required>
        </div>
        <div class="mb-4">
          <label class="block mb-2 text-sm font-bold text-gray-700">
            Pokój
          </label>
          <input class="w-full px-3 py-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline disabled:bg-chat-lightgrey disabled:text-gray-400" name="room" type="text" placeholder="Pokój" value="<%= room %>" required <%= disabled %>>
          <input class="hidden" name="room" type="text" placeholder="Pokój" value="<%= room %>" required <%= enabled %>>
        </div>
        <button class="px-6 py-3 text-white transition duration-300 rounded-md shadow-md bg-chat-purple">Dołącz</button>
      </form>
      <p class="text-xs"><a href="https://github.com/Juras99">github.com/Juras99</a></p>
    </div>
  </section>

</body>

